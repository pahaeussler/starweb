<p id="notice"><%= notice %></p>
<%= puts "film #{@film}" %>
<h1><%= @film['title'] %></h1>

<p>
  <strong>Episode:</strong>
  <%= @film['episodeID'] %>
</p>

<p>
  <strong>Opening crawl:</strong>
  <%= @film['openingCrawl'] %>
</p>

<p>
  <strong>Director:</strong>
  <%= @film['director'] %>
</p>

<p>
  <strong>Producer:</strong>
  <%= @film['producers'] %>
</p>

<p>
  <strong>Release date:</strong>
  <%= @film['releaseDate'] %>
</p>



<p>
  <strong>Characters:</strong>
  <% @film['characterConnection']['edges'].each do |person| %>
    <%= person['node']['name'] + ' - ' %>
    <%# <p><%= link_to get_name(person, 'name'), person_path(get_id(person,'people'))</p> %> 
  <% end %>
</p>
 

<p>
  <strong>Planets:</strong>
  <% @film['planetConnection']['edges'].each do |planet| %>
    <%= planet['node']['name'] + ' - ' %>
    <%# <p><%= link_to get_name(planet, 'name'), planet_path(get_id(planet,'planets'))</p> %>
  <% end %>
</p>


<p>
  <strong>Starships:</strong>
  <% @film['starshipConnection']['edges'].each do |starship| %>
  <%= starship['node']['name'] + ' - ' %>
    <%# <p><%= link_to get_name(starship, 'name'), starship_path(get_id(starship,'starships'))</p> %>
  <% end %>
</p>

<%= link_to 'Back', films_path %>
