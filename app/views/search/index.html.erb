<h1>Search</h1>
<% length =  @films.length + @people.length + @planets.length + @starships.length %>
<h3> <%= "Articles Found: " + length.to_s =%></h3>
<% if @films.length != 0 %>
  <h2>Films</h2>
  <table>
    <thead>
      <tr>
        <th>Episode</th>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Productor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @films.each do |film| %>
        <tr>
          <td><%= film['episode_id'] %></td>
          <td><%= link_to film['title'], film_path(get_id(film['url'], 'films')) %></td>
          <td><%= film['release_date'] %></td>
          <td><%= film['director'] %></td>
          <td><%= film['producer'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

